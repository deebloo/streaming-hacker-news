                padding: 0;
                margin: 0;
            }

            @keyframes spinner {
                to {
                    transform: rotate(360deg);
                }
            }
                    
            hn-news-card:not(:defined):first-child::before {
                content: "";
                box-sizing: border-box;
                position: absolute;
                top: 50%;
                left: 50%;
                width: 50px;
                height: 50px;
                margin-top: -25px;
                margin-left: -25px;
                border-radius: 50%;
                border: 2px solid #ccc;
                border-top-color: #000;
                animation: spinner 600ms linear infinite;
            }

            hn-news-card:not(:defined) {
                display: block;
                height: 150px;
            }

            hn-news-card:not(:defined) > * {
                display: none;
            }
        </style>

